<?xml version="1.0" encoding="UTF-8"?>
<!--
	This component imitates a Google Material Design snackbar.
	It is used to convey messages to the user in an unobtrusive way.
	@see https://material.io/archive/guidelines/components/snackbars-toasts.html
-->
<box width="100%" height="100%" style="margin: 0px; padding: 0px; background-color: #3d3f41;">
    <vbox id="notifbarContainer" width="100%" height="100%">
        <label id="notifbarMessage" text="Hello World" />
        <spacer height="100%" />
        <hbox width="100%">
            <spacer width="100%" />
            <funkin-button id="notifbarAction" text="Test" />
            <funkin-button id="notifbarDismiss" text="Dismiss" />
        </hbox>
    </vbox>
</box>
