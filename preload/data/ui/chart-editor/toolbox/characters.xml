        <property-grid width="250" height="300">
            <property-group text="Boyfriend">
                <property label="Player" type="list" value="Boyfriend">
                    <data>
                        <item text="Boyfriend" />
                        <item text="Pico" />
                        <item text="Tankman" />
                    </data>
                </property>
                <property label="Opponent" type="list" value="Dad">
                    <data>
                        <item text="Daddy Dearest" />
                        <item text="Spooky Kids" />
                        <item text="Monster" />
                        <item text="Pico" />
                        <item text="Mommy Mearest" />
                        <item text="Darnell" />
                    </data>
                </property>
                <property label="Girlfriend" type="list" value="Girlfriend">
                    <data>
                        <item text="None" />
