<?xml version="1.0" encoding="utf-8"?>
<collapsible-dialog id="toolboxMetadata" title="Song" width="300" height="400">
    <vbox width="100%" height="100%">
        <frame text="Variation: Default" width="100%" height="135" id="frameVariation">
            <grid columns="2" width="300">
                <label text="Song Name:" verticalAlign="center" horizontalAlign="right" />
                <funkin-textfield id="inputSongName" value="Bopeebo" />
                <label text="Song Artist:" verticalAlign="center" horizontalAlign="right" />
                <funkin-textfield id="inputSongArtist" value="Kawai Sprite" />
                <label text="Stage:" verticalAlign="center" horizontalAlign="right" />
                <funkin-dropdown id="inputStage" value="Main Stage" horizontalAlign="right">
                    <data>
                        <item text="Main Stage" />
                        <item text="Spooky Mansion" />
                        <item text="Philly Train" />
                        <item text="Limo Ride" />
                        <item text="Mall (Xmas)" />
                        <item text="Mall (Evil)" />
                        <item text="School" />
                        <item text="School (Evil)" />
                        <item text="Tankman Battlefield" />
                        <item text="Philly Streets" />
                        <item text="Philly Streets (Blazin')" />
                    </data>
                </funkin-dropdown>
                <label text="Note Skin:" verticalAlign="center" horizontalAlign="right" />
                <funkin-dropdown id="inputNoteSkin" value="Normal" horizontalAlign="right">
                    <data>
                        <item text="Normal" />
                        <item text="Pixel" />
                    </data>
                </funkin-dropdown>
            </grid>
        </frame>

        <frame text="Difficulty: Normal" width="100%" height="170" id="frameDifficulty">
            <grid columns="2" width="275">
                <label text="Starting BPM" verticalAlign="center" />
                <funkin-number-stepper id="inputBPM" pos="100" step="1" min="10" max="500" precision="1" horizontalAlign="right" />

                <label text="Starting Time Signature" verticalAlign="center" />
                <funkin-dropdown id="inputTimeSignature" value="4/4" disabled="true" horizontalAlign="right">
                    <data>
                        <item text="2/4" />
                        <item text="3/4" />
                        <item text="4/4" />
                        <item text="5/4" />
                        <item text="6/4" />
                        <item text="3/8" />
                        <item text="5/8" />
                        <item text="7/8" />
                        <item text="9/8" />
                    </data>
                </funkin-dropdown>

                <label id="labelScrollSpeed" text="Scroll Speed: 1.0x" />
                <spacer />

                <slider id="inputScrollSpeed" pos="1.0" step="0.1" precision="1" min="0.5" max="5.0" />
                <spacer />
            </grid>
        </frame>
    </vbox>
</collapsible-dialog>
