<?xml version="1.0" encoding="utf-8"?>
<funkin-menubar id="menubar" width="100%" paddingLeft="172">
  <style>
    .menu {
    // The width of the individual menu items
    width: 120px;
    }
  </style>
  <menu text="File">
    <funkin-menu-item id="menubarItemNewChart" text="New Chart" shortcutText="Ctrl+N" />
    <menu-separator />
    <funkin-menu-item id="menubarItemOpenChart" text="Open Chart..." shortcutText="Ctrl+O" />
    <menu text="Open Recent" disabled="true">
      <funkin-menu-item text="D:/Funkin/charts/expurgated.json" />
      <funkin-menu-item text="D:/Funkin/charts/fatal-error.json" />
      <funkin-menu-item text="C:/Downloads/bad-bash.json" />
      <funkin-menu-item text="D:/Funkin/charts/lullaby/monochrome.json" />
    </menu>
    <menu-separator />
    <funkin-menu-item id="menubarItemSaveChartAs" text="Save Chart As..." shortcutText="Ctrl+Shift+S" />
    <menu-separator />
    <funkin-menu-item id="menubarItemPreferences" text="Preferences" disabled="true" />
    <menu-separator />
    <funkin-menu-item id="menubarItemExit" text="Exit" shortcutText="Ctrl+Q" />
  </menu>
  <menu text="Edit">
    <funkin-menu-item id="menubarItemUndo" text="Undo" shortcutText="Ctrl+Z" />
    <funkin-menu-item id="menubarItemRedo" text="Redo" shortcutText="Ctrl+Y" />
    <menu-separator />
    <funkin-menu-item id="menubarItemCut" text="Cut" shortcutText="Ctrl+X" />
    <funkin-menu-item id="menubarItemCopy" text="Copy" shortcutText="Ctrl+C" />
    <funkin-menu-item id="menubarItemPaste" text="Paste" shortcutText="Ctrl+V" />
    <funkin-menu-item id="menubarItemPasteUnsnapped" text="Paste (Unsnapped)" shortcutText="Ctrl+Shift+V" />
    <funkin-menu-item id="menubarItemDelete" text="Delete" shortcutText="Delete" />
    <menu-separator />
    <funkin-menu-item id="menubarItemFlipNotes" text="Flip Selected Notes" />
    <menu-separator />
    <funkin-menu-item id="menubarItemSelectAll" text="Select All" shortcutText="Ctrl+A" />
    <funkin-menu-item id="menubarItemSelectInverse" text="Select Inverse" shortcutText="Ctrl+I" />
    <funkin-menu-item id="menubarItemSelectNone" text="Select None" shortcutText="Ctrl+D" />
    <funkin-menu-item id="menubarItemSelectRegion" text="Select Region" shortcutText="Tab" disabled="true" />
    <funkin-menu-item id="menubarItemSelectBeforeCursor" text="Select Before Cursor" shortcutText="Shift+Home" disabled="true" />
    <funkin-menu-item id="menubarItemSelectAfterCursor" text="Select After Cursor" shortcutText="Shift+End" disabled="true" />
    <menu-separator />
    <menu text="Note Snapping">
      <menu-item id="menuBarItemNoteSnapDecrease" text="Decrease Note Snap Precision" shortcutText="Left Arrow" />
      <menu-item id="menuBarItemNoteSnapIncrease" text="Increase Note Snap Precision" shortcutText="Right Arrow" />
    </menu>
    <menu text="Live Input Mode">
      <menuoptionbox id="menuBarItemInputStyleNone" text="None" group="menubarItemInputStyleGroup" selected="true" />
      <menuoptionbox id="menuBarItemInputStyleNumberKeys" text="Number Keys" group="menubarItemInputStyleGroup" />
      <menuoptionbox id="menuBarItemInputStyleWASD" text="WASD + Arrows" group="menubarItemInputStyleGroup" />
    </menu>
  </menu>
  <menu text="View">
    <funkin-menu-checkbox id="menubarItemDownscroll" text="Downscroll" disabled="true" />
    <menu text="Theme">
      <funkin-menu-option-box id="menuBarItemThemeLight" text="Light" group="menubarItemThemeGroup" selected="true" />
      <funkin-menu-option-box id="menuBarItemThemeDark" text="Dark" group="menubarItemThemeGroup" />
    </menu>
    <menu-separator />
    <funkin-menu-item id="menubarItemDifficultyUp" text="Increase Difficulty" tooltip="Manage Difficulties with the Difficulty Toolbox" shortcutText="Ctrl+Left" />
    <funkin-menu-item id="menubarItemDifficultyDown" text="Decrease Difficulty" tooltip="Manage Difficulties with the Difficulty Toolbox" shortcutText="Ctrl+Right" />
  </menu>
  <menu text="Audio">
    <funkin-menu-item id="menubarItemPlayPause" text="Play/Pause" shortcutText="Space" />
    <menu-separator />
    <funkin-menu-item id="menubarItemLoadInstrumental" text="Load Instrumental" />
    <funkin-menu-item id="menubarItemLoadVocals" text="Load Vocals" />
    <menu-separator />
    <funkin-menu-checkbox id="menubarItemMetronomeEnabled" text="Enable Metronome" />
    <funkin-menu-checkbox id="menubarItemPlayerHitsounds" text="Enable Player Note Sounds" />
    <funkin-menu-checkbox id="menubarItemOpponentHitsounds" text="Enable Opponent Note Sounds" />
    <menu-separator />
    <vbox width="100%" style="padding: 5px;">
      <label id="menubarLabelVolumeInstrumental" text="Instrumental - 100%" />
      <slider id="menubarItemVolumeInstrumental" width="100%" majorTicks="10" minorTicks="5" pos="100" />
      <label id="menubarLabelVolumeVocals" text="Vocal Volume - 100%" />
      <slider id="menubarItemVolumeVocals" width="100%" majorTicks="10" minorTicks="5" pos="100" />
      <label id="menubarLabelPlaybackSpeed" text="Playback Speed - 100%" />
      <slider id="menubarItemPlaybackSpeed" width="100%" majorTicks="10" minorTicks="5" pos="50" />
    </vbox>
  </menu>
  <menu text="Test">
    <funkin-menu-item id="menubarItemPlaytestFull" text="Playtest Chart" shortcutText="Enter" />
    <funkin-menu-item id="menubarItemPlaytestMinimal" text="Playtest Chart (Minimal Mode)" shortcutText="Shift-Enter" />
    <funkin-menu-checkbox id="menubarItemPlaytestStartTime" text="Start at Current Time?" />
  </menu>
  <menu text="Window">
    <funkin-menu-checkbox id="menubarItemToggleToolboxDifficulty" text="Difficulty" />
    <funkin-menu-checkbox hidden="true" id="menubarItemToggleToolboxPlayerPreview" text="Player Preview" />
    <funkin-menu-checkbox hidden="true" id="menubarItemToggleToolboxOpponentPreview" text="Opponent Preview" />
    <funkin-menu-checkbox id="menubarItemToggleToolboxMetadata" text="Metadata" />
    <funkin-menu-checkbox id="menubarItemToggleToolboxNotes" text="Notes" />
    <funkin-menu-checkbox id="menubarItemToggleToolboxEvents" text="Events" />
  </menu>
  <menu text="Help">
    <funkin-menu-item id="menubarItemWelcomeDialog" text="Welcome Dialog" />
    <funkin-menu-item id="menubarItemUserGuide" text="User Guide" shortcutText="F1" />
    <funkin-menu-item id="menubarItemAbout" text="About..." />
  </menu>
  <spacer width="100%" />
  <label text="PROTOTYPE Functionality is subject to change." verticalAlign="center" />
</funkin-menubar>
