<?xml version="1.0" encoding="utf-8"?>
<collapsible-dialog id="toolboxMetadata" title="Song Metadata" width="345" height="500">
    <vbox width="100%" height="100%">
        <frame text="Variation: Default" width="100%" height="230" id="frameVariation">
            <vbox width="100%" height="100%">
                <grid columns="2" height="100%">
                    <label text="Song Name:" verticalAlign="center" horizontalAlign="right" />
                    <textfield id="inputSongName" value="Bopeebo" tooltip="The readable name of the song." />
                    <label text="Song Artist:" verticalAlign="center" horizontalAlign="right" />
                    <textfield id="inputSongArtist" value="Kawai Sprite" tooltip="The artist who composed the song." />
                    <label text="Stage:" verticalAlign="center" horizontalAlign="right" />
                    <dropdown id="inputStage" value="Main Stage" width="100%" horizontalAlign="right" dropdownSize="10" dropdownWidth="300" searchable="true" tooltip="Which stage the level takes place on.">
                        <data>
                            <item text="Main Stage" />
                            <item text="Spooky Mansion" />
                            <item text="Philly Train" />
                            <item text="Limo Ride" />
                            <item text="Mall (Xmas)" />
                            <item text="Mall (Evil)" />
                            <item text="School" />
                            <item text="School (Evil)" />
                            <item text="Tankman Battlefield" />
                            <item text="Philly Streets" />
                            <item text="Philly Streets (Blazin')" />
                        </data>
                    </dropdown>
                    <label text="Note Style:" verticalAlign="center" horizontalAlign="right" />
                    <dropdown id="inputNoteStyle" value="Normal" width="100%" horizontalAlign="right" dropdownSize="10" dropdownWidth="300" tooltip="Which graphical style of notes to use.">
                        <data>
                            <item text="Normal" />
                            <item text="Pixel" />
                        </data>
                    </dropdown>
                    <!--
                <label text="Player Character:" verticalAlign="center" horizontalAlign="right" />
				<dropdown id="inputCharacterPlayer" value="bf" horizontalAlign="right" width="100%" dropdownSize="10" dropdownWidth="300" searchable="true" tooltip="Which character to use as the player.">
					<validator type="required" />
					<data>
						<item id="bf" text="Boyfriend" />
                        <item id="pico-playable" text="Pico (Darnell)" />
					</data>
				</dropdown>

				<label text="Opponent Character:" verticalAlign="center" horizontalAlign="right" />
				<dropdown id="inputCharacterOpponent" value="dad" horizontalAlign="right" width="100%" tooltip="Which character to use as the opponent." dropdownSize="10" dropdownWidth="300" searchable="true">
					<validator type="required" />
					<data>
						<item id="dad" text="Daddy Dearest" />
                        <item id="darnell" text="Darnell" />
					</data>
				</dropdown>

				<label text="Girlfriend Character:" verticalAlign="center" horizontalAlign="right" />
				<dropdown id="inputCharacterGirlfriend" value="none" horizontalAlign="right" width="100%" tooltip="Which character to use as the Girlfriend character in the back." dropdownSize="10" dropdownWidth="300" searchable="true">
					<data>
						<item id="none" text="" />
						<item id="gf" text="Girlfriend" />
                        <item id="nene" text="Nene" />
					</data>
				</dropdown>
                -->
                </grid>
                <hbox width="100%">
                    <button id="buttonCharacterOpponent" width="70" height="70" padding="8" iconPosition="top">
                        Daddy Dearest
                    </button>
                    <button id="buttonCharacterGirlfriend" width="70" height="70" padding="8" iconPosition="top">
                        Girlfriend
                    </button>
                    <button id="buttonCharacterPlayer" width="70" height="70" padding="8" iconPosition="top">
                        Boyfriend
                    </button>
                </hbox>
            </vbox>
        </frame>
        <frame text="Difficulty: Normal" width="100%" height="130" id="frameDifficulty">
            <grid columns="2">
                <label text="Starting BPM" verticalAlign="center" />
                <number-stepper id="inputBPM" pos="100" step="1" min="10" max="500" precision="1" horizontalAlign="right" tooltip="Adjust the BPM of the song, which helps align the grid and character animations to the music." />
                <label text="Starting Time Signature" verticalAlign="center" />
                <dropdown id="inputTimeSignature" value="4/4" disabled="true" horizontalAlign="right" tooltip="Adjust the time signature of the song, which helps align the grid.">
                    <data>
                        <item text="2/4" />
                        <item text="3/4" />
                        <item text="4/4" />
                        <item text="5/4" />
                        <item text="6/4" />
                        <item text="3/8" />
                        <item text="5/8" />
                        <item text="7/8" />
                        <item text="9/8" />
                        <item text="15/16" />
                    </data>
                </dropdown>
                <label id="labelScrollSpeed" text="Scroll Speed: 1.0x" />
                <spacer />
                <slider id="inputScrollSpeed" pos="1.0" step="0.1" precision="1" min="0.5" max="5.0" tooltip="Adjust the relative speed at which the notes move." />
                <spacer />
                <label text="Instrumental Offset" verticalAlign="center" />
                <!-- Increment by 1 when clicking buttons, precision to 1 decimal place (0.1) -->
                <number-stepper id="inputOffsetInst" pos="0" step="1" precision="1" horizontalAlign="right" tooltip="Adjust the start of the instrumental track by this many milliseconds." />
                <label text="Vocal Offset" verticalAlign="center" />
                <number-stepper id="inputOffsetVocal" pos="0" step="1" precision="1" horizontalAlign="right" tooltip="Adjust the start of the vocal track by this many milliseconds, ON TOP OF the instrumental offset." />
            </grid>
        </frame>
    </vbox>
</collapsible-dialog>
